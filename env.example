# Telegram Bot
BOT_TOKEN=your_telegram_bot_token_here

# Whisper Configuration
WHISPER_MODEL=medium
WHISPER_DEVICE=cpu
USE_OPENAI_WHISPER_API=false
OPENAI_API_KEY=

# FreeQwenApi Configuration
FREEWEN_API_URL=http://localhost:3264
FREEWEN_API_KEY=
FREEWEN_MODEL=qwen-max-latest

# OpenRouter Configuration
# Бесплатные модели: google/gemini-2.0-flash-exp:free (лучшая), meta-llama/llama-3.3-70b-instruct:free, qwen/qwen-2.5-vl-7b-instruct:free
# Лимиты: 20 req/min, 200 req/day
OPENROUTER_API_KEY=
OPENROUTER_MODEL=google/gemini-2.0-flash-exp:free

# Local LLM Configuration (Ollama/LM Studio)
# Используется как fallback, если OpenRouter недоступен
LOCAL_LLM_URL=http://localhost:11434
LOCAL_LLM_MODEL=qwen:4b  # Qwen 2.5 4B (легкая модель, ~1GB)
LOCAL_LLM_API_TYPE=ollama

# Database
DATABASE_URL=sqlite+aiosqlite:///./bot.db
USE_APPWRITE=false

# Appwrite (optional, если используем Appwrite вместо SQLite)
# Установите USE_APPWRITE=true и заполните параметры ниже
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=
APPWRITE_API_KEY=

# Logging
LOG_LEVEL=INFO
